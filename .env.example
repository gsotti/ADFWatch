# Scanner Configuration
SCANNER_IP=192.168.1.100
SCANNER_NAME=My Scanner  # Your scanner's display name

# Scan Settings
POLL_INTERVAL=5
SCAN_RESOLUTION=300
SCAN_MODE=Color
DUPLEX_MODE=true  # true = scan both sides, false = scan single side only
DUPLEX_FLIP_DELAY=10  # Seconds to wait for flipping stack in manual duplex mode
BLANK_THRESHOLD=0.005
OUTPUT_DIR=/scans
LOG_LEVEL=info

# Upload Settings (optional - enables automatic upload after scanning)
UPLOAD_ENABLED=false
UPLOAD_PROTOCOL=sftp  # ftp, ftps, or sftp
UPLOAD_HOST=your-server.com
UPLOAD_PORT=22  # Optional, defaults: ftp=21, ftps=21, sftp=22
UPLOAD_USER=username
UPLOAD_PASSWORD=password
UPLOAD_PATH=/scans  # Remote directory path
UPLOAD_DELETE_AFTER=false  # Delete local file after successful upload
